<link href="user.css" rel="stylesheet">

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>


  <div class="container">
    <div class="card-container">
      <div class="card-body">
          <h3 class="card-title text-center mb-4 mt-1">新規登録</h3>
    
  
  <form>
  <div class="form-group">
    <%= f.label "ユーザー名" %>
    <%= f.text_field :nickname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Email" %>
    <%= f.email_field :email, class: "form-control", placeholder:"sample@gmail.com" %>
  </div>

  <div class="form-group">
    <%= f.label "Password" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Password 確認" %><br />
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group col-md-4">
    <label for="inputState">年齢</label>
    <select class="form-control">
      <% Age.all.each do |age| %>
      <option><%= age.name %></option>
   <% end %>
  </select>
 </div>


  <div class="form-group col-md-4">
    <label for="inputState">ライフスタイル</label>
    <select class="form-control">
    <% Category.all.each do |category| %>
      <option><%= category.name %></option>
   <% end %>
  </select>
 </div>


  <div class="actions">
    <%= f.submit "次へ" ,class: "btn btn-outline-secondary"%>
  </div>
  </form>
<% end %>
