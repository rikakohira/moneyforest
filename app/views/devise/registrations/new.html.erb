<h2>新規登録</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_area :nickname, placeholder:"例) sample" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例) sample@gmail.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "年齢を選択" %><br />
    <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"age-select"}) %>
  </div>

  <div class="field">
    <%= f.label "ライフスタイルを選択" %><br />
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"category-select"}) %>
  </div>


  <div class="actions">
    <%= f.submit "次へ" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
