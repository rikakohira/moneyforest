<div class="wrapper">
  <%= render "devise/shared/header" %>

  <%= form_with model: @user, url: books_path, method: :GET, class: "registration-main" ,local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

    <%# 入力フォーム %>
    <div class="form-area3">
      <div class='form-header3'>
        <h1 class="form-title">アカウントをお持ちの方</h1>
      </div>
      <form>
        <div class="form-group">
          <%= f.label "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder:"sample@gmail.com" %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード", class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class='form-bottom-text'>
          <%= f.submit "ログイン" ,class: "btn btn-outline-secondary"%>
        </div>
      </form>
    </div>

  <% end %>
</div>

