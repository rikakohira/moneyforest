<div class="wrapper">
  <%= render "shared/header" %>
  <div class="mein">

    <!-- ナビ -->
    <div class="nav-area">
      <nav class="nav">
        <%= link_to 'アカウント', user_path, class:"nav-link active" %>
        <%= link_to 'アカウント編集', edit_user_path, class:"nav-link" %>
        <%= link_to '登録情報', edit_user_path, class:"nav-link" %>
      </nav>
    </div>

    <!-- アカウント編集フォーム -->
    <%= form_with model: @user, local: true do |f| %>
    <div class="mypage-area">
      <div class="mypage-field2">
        <div class='mypage-header'>
          <h1>アカウント編集</h1>
        </div>

        <div class="form-group">
          <%= f.label "アカウント名", class: "form-label" %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder:"sample@gmail.com" %>
        </div>
        <div class="form-group">
          <%= f.label "年齢", class: "form-label" %>
          <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"form-control"}) %>
        </div>
        <div class="form-group">
          <%= f.label "ライフスタイル" , class: "form-label"%>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"form-control"}) %>
        </div>
        <div class='form-bottom-text'>
          <%= f.submit "登録" ,class: "btn btn-outline-secondary"%>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>